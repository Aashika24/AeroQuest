import streamlit as st
import random

# List of space-themed GIF URLs
space_gifs = [
    "https://media.giphy.com/media/3oEjI0UdFkyLtpFJN6/giphy.gif" # Galaxy animation
       # Starry sky
]

# Set the page title and layout
st.set_page_config(page_title="ğŸŒŒ Cosmic GIF Fun", layout="wide")

# Create an expander for the GIF section
with st.expander("ğŸŒŒ Cosmic GIF Fun"):
    # Display a random GIF from the list
    selected_gif = random.choice(space_gifs)
    st.image(selected_gif, use_container_width=True)

    # Button to refresh and show a new GIF
    if st.button("Show Another GIF"):
        selected_gif = random.choice(space_gifs)
        st.image(selected_gif, use_column_width=True)



with st.expander("ğŸª More Space Facts"):
 for fact in fun_facts:
        st.write(fact)

with st.expander("ğŸ‘½ Mini Space Quiz"):
    st.write("Q: Which planet spins backwards?")
    options = ["Venus", "Mars", "Jupiter", "Mercury"]
    choice = st.radio("Choose an answer:", options)
    if st.button("Check Answer", key="quiz"):
        if choice == "Venus":
            st.success("Correct! ğŸŒŸ")
        else:
            st.error("Oops! Try again. âŒ")

st.caption("ğŸ’¡ Tip: Click buttons multiple times for new facts, updates, and surprises!")






import streamlit as st
import feedparser  # pip install feedparser

# ===== Page config =====
st.set_page_config(page_title="ğŸŒŒ NASA Fun Explorer", layout="wide", page_icon="ğŸš€")


# ===== Real-Time NASA News =====
st.subheader("ğŸš€ Latest NASA News")

# NASA RSS feed
rss_url = "https://www.nasa.gov/rss/dyn/breaking_news.rss"
feed = feedparser.parse(rss_url)

# Display top 5 news
for entry in feed.entries[:5]:
    st.markdown(f"**{entry.title}**")
    st.write(entry.summary)
    st.markdown(f"[Read more]({entry.link})")
    st.markdown("---")
